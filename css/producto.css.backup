/* Product Page Styles */

.product-container {
    padding-top: 1rem;
}

.breadcrumbs {
    margin-bottom: 2rem;
    color: var(--text-muted);
    font-size: 0.9rem;
}

.breadcrumbs a:hover {
    color: var(--primary);
    text-decoration: underline;
}

.product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
}

/* Gallery */
.product-gallery {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.main-image {
    position: relative;
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    aspect-ratio: 1;
    overflow: hidden;
}

.main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
}

.main-image:hover img {
    transform: scale(1.05);
}

/* Gallery Navigation Arrows */
.gallery-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.6);
    color: white;
    border: none;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    opacity: 0;
    transition: all 0.3s;
    z-index: 10;
}

.main-image:hover .gallery-arrow {
    opacity: 1;
}

.gallery-arrow:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: translateY(-50%) scale(1.1);
}

.gallery-arrow-left {
    left: 1rem;
}

.gallery-arrow-right {
    right: 1rem;
}

.thumbnails {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
}

.thumb {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
    padding: 0.5rem;
    cursor: pointer;
    background: var(--bg-card);
    opacity: 0.7;
    transition: all 0.2s;
}

.thumb.active,
.thumb:hover {
    opacity: 1;
    border-color: var(--primary);
}

.thumb img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

/* Details */
.product-details {
    display: flex;
    flex-direction: column;
}

.category-tag {
    text-transform: uppercase;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.badge-sale {
    display: inline-block;
    background: #ef4444;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    vertical-align: middle;
}

.product-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.1;
}

.price-block {
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.current-price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-main);
}

.old-price {
    font-size: 1.25rem;
    text-decoration: line-through;
    color: var(--text-muted);
}

.options-block {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
}

.option-group {
    margin-bottom: 1.5rem;
}

.option-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.75rem;
}

.size-selector {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.size-btn {
    width: 45px;
    height: 45px;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    background: var(--bg-card);
    color: var(--text-main);
    font-weight: 600;
    transition: all 0.2s;
}

.size-btn:hover {
    border-color: var(--primary);
}

.size-btn.active {
    background: var(--primary);
    color: var(--bg-card);
    border-color: var(--primary);
}

#version-select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    background: var(--bg-card);
    color: var(--text-main);
}

.actions-block {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
}

.quantity-selector {
    display: flex;
    align-items: center;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    background: var(--bg-card);
}

.quantity-selector button {
    width: 40px;
    height: 40px;
    font-size: 1.2rem;
    color: var(--text-main);
}

.quantity-selector input {
    width: 50px;
    text-align: center;
    border: none;
    background: transparent;
    color: var(--text-main);
    font-weight: 600;
    -moz-appearance: textfield;
}

.quantity-selector input::-webkit-outer-spin-button,
.quantity-selector input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

.btn-add-cart-lg {
    flex: 1;
    background: var(--primary);
    color: var(--bg-card);
    font-weight: 700;
    border-radius: var(--radius-sm);
    font-size: 1.1rem;
    transition: opacity 0.2s;
}

.btn-add-cart-lg:hover {
    opacity: 0.9;
}

.description-block h3 {
    font-weight: 700;
    margin-bottom: 1rem;
}

.description-block p {
    color: var(--text-muted);
    margin-bottom: 1rem;
}

.features-list li {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-main);
}

.features-list i {
    color: var(--accent);
}

/* Related Products */
.related-products h2 {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    margin-bottom: 2rem;
}

/* Responsive */
@media (max-width: 768px) {
    .product-layout {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .product-title {
        font-size: 2rem;
    }

    .actions-block {
        flex-direction: column;
    }

    .btn-add-cart-lg {
        padding: 1rem;
    }
}